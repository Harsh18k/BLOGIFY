<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Add Blog | Blogify</title>

  <style>
    html, body {
      height: 100%;
      margin: 0;
      background: #f3f4f6;
    }

    .editor-page {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    /* TOP BAR */
    .editor-topbar {
      background: #ffffff;
      border-bottom: 1px solid #e5e7eb;
      padding: 14px 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: sticky;
      top: 0;
      z-index: 100;
      gap: 10px;
    }

    .editor-topbar h4 {
      margin: 0;
      font-weight: 700;
      font-size: 18px;
    }

    /* MAIN */
    .editor-main {
      flex: 1;
      padding: 24px 48px;
      background: #f3f4f6;
      position: relative;
    }

    .editor-form {
      width: 100%;
    }

    /* COVER IMAGE */
    .cover-dropzone {
      background: #ffffff;
      border: 2px dashed #d1d5db;
      border-radius: 14px;
      padding: 28px;
      text-align: center;
      cursor: pointer;
      margin-bottom: 20px;
    }

    .cover-dropzone:hover {
      background: #f9fafb;
      border-color: #6366f1;
    }

    .cover-text {
      color: #6b7280;
      font-size: 15px;
    }

    .cover-preview {
      display: none;
      margin-top: 12px;
    }

    .cover-preview img {
      max-width: 100%;
      border-radius: 12px;
    }

    .cover-input { display: none; }

    /* TITLE */
    .blog-title-input {
      font-size: 30px;
      font-weight: 700;
      border: none;
      outline: none;
      background: transparent;
      margin: 20px 0;
      width: 100%;
    }

    /* EDITOR */
    #editorjs {
      background: #ffffff;
      border-radius: 14px;
      padding: 32px 48px;
      min-height: 70vh;
    }

    .ce-block__content,
    .ce-toolbar__content {
      max-width: 100% !important;
    }

    /* MAGIC HINT */
    .editor-hint {
      position: absolute;
      left: 20px;
      top: 280px;
      background: #111827;
      color: #ffffff;
      padding: 10px 14px;
      border-radius: 8px;
      font-size: 14px;
      animation: pulse 1.8s infinite;
      z-index: 20;
    }

    @keyframes pulse {
      0% { transform: scale(1); opacity: 0.9; }
      50% { transform: scale(1.04); opacity: 1; }
      100% { transform: scale(1); opacity: 0.9; }
    }

    @media (max-width: 768px) {
      .editor-main { padding: 16px; }
      #editorjs { padding: 20px; }
      .editor-hint { display: none; }
    }
  </style>
</head>

<body>

<%- include('./partials/nav') %>

<div class="editor-page">

  <!-- TOP BAR -->
  <div class="editor-topbar">
    <h4>‚úçÔ∏è Write a New Blog</h4>
    <div>
      <button type="button" id="previewBtn" class="btn btn-outline-secondary me-2">
        Preview
      </button>
      <button type="submit" form="blogForm" class="btn btn-primary">
        Publish
      </button>
    </div>
  </div>

  <!-- MAIN -->
  <div class="editor-main">

    <div id="editorHint" class="editor-hint">
      Click <strong>+</strong> or type <strong>/</strong><br>
      to add headings, images, code & more ‚ú®
    </div>

    <form id="blogForm" class="editor-form" action="/blog" method="POST" enctype="multipart/form-data">

      <!-- COVER IMAGE -->
      <label class="cover-dropzone">
        <input type="file" name="coverImage" class="cover-input" accept="image/*" id="coverInput">
        <div class="cover-text">
          üñºÔ∏è <strong>Cover Image</strong><br>
          Click to upload a cover image
        </div>
        <div class="cover-preview" id="coverPreview"></div>
      </label>

      <!-- TITLE -->
      <input type="text" name="title" class="blog-title-input"
        placeholder="Enter your blog title..." required>

      <!-- EDITOR -->
      <div id="editorjs"></div>
      <input type="hidden" name="content" id="content">
    </form>
  </div>

  <%- include('./partials/footer') %>
</div>

<!-- EDITOR.JS -->
<script src="https://cdn.jsdelivr.net/npm/@editorjs/editorjs@2.30.2"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/header@2.8.1"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/list@1.9.0"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/quote@2.5.0"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/paragraph@2.11.3"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/code@2.9.0"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/delimiter@1.3.0"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/image@2.8.1"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/embed@2.5.3"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/table@2.3.0"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/checklist@1.5.0"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/inline-code@1.4.0"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/marker@1.3.0"></script>
<script src="https://cdn.jsdelivr.net/npm/@editorjs/link@2.5.0"></script>

<script>
  const editor = new EditorJS({
    holder: 'editorjs',
    placeholder: 'Start writing your story...',
    tools: {
      header: { class: Header, inlineToolbar: true },
      paragraph: { class: Paragraph, inlineToolbar: true },
      list: { class: List, inlineToolbar: true },
      quote: { class: Quote, inlineToolbar: true },
      code: CodeTool,
      delimiter: Delimiter,
      checklist: Checklist,
      inlineCode: InlineCode,
      marker: Marker,
      table: { class: Table, inlineToolbar: true },
      embed: { class: Embed },
      linkTool: { class: LinkTool, config: { endpoint: '/blog/fetch-link-preview' } },
      image: { class: ImageTool, config: { endpoints: { byFile: '/blog/upload-image' } } }
    }
  });

  /* PUBLISH */
  document.getElementById("blogForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    const data = await editor.save();
    if (!data.blocks.length) return alert("Write something first ‚úçÔ∏è");
    document.getElementById("content").value = JSON.stringify(data);
    e.target.submit();
  });

  /* COVER PREVIEW */
  const coverInput = document.getElementById("coverInput");
  const coverPreview = document.getElementById("coverPreview");

  coverInput.addEventListener("change", () => {
    const file = coverInput.files[0];
    if (!file) return;
    const reader = new FileReader();
    reader.onload = () => {
      coverPreview.innerHTML = `<img src="${reader.result}">`;
      coverPreview.style.display = "block";
    };
    reader.readAsDataURL(file);
  });

  /* PREVIEW */
  document.getElementById("previewBtn").addEventListener("click", async () => {
    const content = await editor.save();
    if (!content.blocks.length) return alert("Write something first ‚úçÔ∏è");

    const title = document.querySelector(".blog-title-input").value || "Untitled Draft";
    const cover = coverInput.files[0] ? URL.createObjectURL(coverInput.files[0]) : "";

    sessionStorage.setItem(
      "blogPreviewData",
      JSON.stringify({ title, content, coverImageURL: cover })
    );

    window.open("/blog/preview", "_blank");
  });

  setTimeout(() => {
    const hint = document.getElementById("editorHint");
    if (hint) hint.style.display = "none";
  }, 5000);
</script>

</body>
</html>